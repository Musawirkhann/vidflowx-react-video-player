{
  "name": "vidflowx",
  "version": "1.0.0",
  "description": "A fully customizable React video player supporting direct sources, YouTube, Vimeo, Dailymotion, Facebook, TikTok, HLS, and DASH streaming",
  "author": "Musawir Khan",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "keywords": [
    "react",
    "video",
    "player",
    "youtube",
    "vimeo",
    "dailymotion",
    "facebook",
    "tiktok",
    "hls",
    "dash",
    "streaming",
    "media",
    "video-player",
    "react-player",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/musawirkhann/vidflowx-react-video-player.git"
  },
  "bugs": {
    "url": "https://github.com/musawirkhann/vidflowx-react-video-player/issues"
  },
  "homepage": "https://github.com/musawirkhann/vidflowx-react-video-player#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^26.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "storybook": "^8.5.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.0",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "framer-motion": "^11.18.0",
    "hls.js": "^1.5.0",
    "dashjs": "^4.7.0"
  }
}
